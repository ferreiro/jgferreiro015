// Variables
// Degine widths for differents devices
tabletWidth = 600px
desktopWidth = 800px

// Texts
textTitle = 36px;
textSubtitle = 24px;
textParagraph = 18px;
textMargin = 20px;
redMagenta = #B33538;

// Mixins
 
body {
	background #fff
	font-size textParagraph
	font-family: Martel, georgia;
}

li {
	list-style:none;
}

h1, h2, h3, h4, a, li, ul, a
	margin 0
	padding 0
	-webkit-margin-before: 0;
	-webkit-margin-after: 0;

a
	text-decoration:none;  
	color:#222;
	&:hover
		background:#f4f4f4;

.loader
	width 100%
	height 100%
	background:#fff url(../icons/loading.svg);
	background-repeat:no-repeat;
	background-size: 60px auto; // Sets size for the loader
	background-position: 50% 50%; // Center icon in the middle of screen
	position fixed
	top:0;
	left:0;
	z-index 1000
	
// Close
.close   
	color:#A7A6A6;
	background:#e7e7e7;
	display:inline-block;
	padding:0.2em 0.5em;

// Button
.button
	display:inline-block;
	margin-right:.7em;
	&:hover
		a
			background:#DEA7A7;
			color:#fff;
	a
		font-size:0.85em;
		padding:0.4em .7em;
		color:#C39D9E;
		color: rgba(179, 53, 56, 0.80);
		-webkit-border-radius: 3px;
		-moz-border-radius: 3px;
		border-radius: 3px;
		border:1px dashed #D2B4B5;
		display:block;
		text-decoration:none;

.button-lightGrey
	@extend .button
	&:hover
		a
			background:#DEA7A7;
			color:#fff;
	a
		border-color:#E6E6E6;
		color:#A7A7A7;

// Defines margings and style for commun elements

.title
	font-size: textTitle - 15px;
	margin: 0 0 textMargin 0;
	line-height: textTitle;
	@media all and (min-width: tabletWidth)
		font-size: textTitle - 10px;
	@media all and (min-width: desktopWidth)
		font-size: textTitle;

.subtitle
	font-size: textSubtitle;
	margin: 0 0 textMargin 0;
	line-height: textSubtitle;
	color:redMagenta;
	margin-top:1.5em;
	margin-bottom:1em;

.paragraph
	font-size: textParagraph - 2px;
	@media all and (min-width: tabletWidth)
		font-size: textParagraph - 2px;
	@media all and (min-width: desktopWidth)
		font-size: textParagraph;

// Basic components

// Importing menu
@import 'menu.styl'

.container
	padding: 1em 0;
	@media all and (min-width:tabletWidth)
		padding: 2em 0;
	@media all and (min-width:desktopWidth)
		padding: 2em 0;

.menuTop,
.container,
.footer
	width: 100%;
	display: inline-block;

	&-int
		margin: 0 1.5em;
		position: relative;
		@media screen and (min-width: tabletWidth)
			width: tabletWidth - 50px; 
			margin: 0 auto;
		@media screen and (min-width: desktopWidth)
			width: desktopWidth - 50px;
			margin: 0 auto;

.bigHeader
	height: 200px;
	background-color: #e8edf1;
	background-position: 50% 50%;
	background-repeat: no-repeat;
	background-image: url(../images/jorge_ferreiro_small.jpg);
	background-size: auto;
	background-size: cover; 
	margin-top:75px;

	.container-int
		height: 160px;
	
	@media all and (min-width: tabletWidth)
		height: 260px;
		background-image: url(../images/jorge_ferreiro_medium_NEW.jpg);
		background-position:70% 50%;

		.container-int
			height: 190px; 
			padding: 0;  

	@media all and (min-width: desktopWidth)
		height: 310px;
		// background-image: url(../images/jorge_ferreiro_large.jpg);
		background-size: auto;
		.container-int
			height: 210px; 
			padding: 0;  

	// Big header logo
	&-logo
		width: 200px; 
		display: inline-block;  
		left: 0; 
		position: absolute;
		bottom: 0; 

		@media all and (min-width: tabletWidth)
			width:260px;
		@media all and (min-width: desktopWidth)
			width:360px;

		&-image 
			height: 50px;
			margin-bottom: 0.3em;

			@media all and (min-width: tabletWidth)
				height: 48px; 
			@media all and (min-width: desktopWidth)
				height: 60px;
				margin-bottom: 1em;

			display: block;
			background: rgba(255, 255, 255, 0.5);
			background:url(../images/logo.png);
			background-size:100% auto;
			background-repeat:no-repeat;
			background-position:50% 50%;
		&-text
			// This is only for SEO
			display: none;
		&-subtext
			font-size: 1em;
			line-height: 1em;
			@media all and (min-width: desktopWidth)
				font-size: 1.3em;

.header
	width: 100%;
	height: 75px;
	background: rgba(15, 22, 63, 0.9);
	background: rgba(0, 0, 0, 0.7);
	background: rgba(255, 255, 255, 0.8);
	margin-top: 0;
	z-index: 10;
	position: fixed;
	&-int
		margin: 0 1.5em;
		position: relative;
		@media screen and (min-width: tabletWidth)
			width: tabletWidth - 50px; 
			margin: 0 auto;
		@media screen and (min-width: desktopWidth)
			width: desktopWidth - 50px;
			margin: 0 auto;
	&-fixed
		background: rgba(255, 255, 255, 0.9);
		position: fixed;
		top: 0;
		margin-top: 0;
	// Header logo
	&-logo
		max-width: 200px; 
		margin-top: 10px;
		display: inline-block;
	&-menu
		height: 50px;
		display: inline-block;
		vertical-align: top;
		float: right;
		position: absolute;
		top: 0;
		right: 0;
		&-separator {
			width: 1px;
			height: 100%;
			display: inline-block;
			background: blue;
			vertical-align: top;
		}
		.header-menu-language {
			margin-left: 0.5em; 
		}
		li
			display: inline-block;
			position: relative;
			height: 100%;
			margin-left: 1em;
			vertical-align: top;
			a 
				height: 100%;
				display: block;
				position: relative;

				p
					margin: 0;
					padding: 0;
					position: relative;
					line-height: 1.3em;
					top: 50%;
					-webkit-transform: translateY(-50%);
					-ms-transform: translateY(-50%);
					transform: translateY(-50%);
 
					img
						width:20px;
						display: none;
  		
