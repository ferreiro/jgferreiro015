 
.projects
	width:100%; 
	margin-bottom:2em;
	// margin-left:-0.3em;

	// <li>
	&-entry
		width:33.333%;
		@media all and (max-width:desktopWidth - 1px)
			width:50% !important;
		@media all and (max-width:450px)
			width:100% !important;
		display:inline-block;
		vertical-align:top;
		margin:0.3em 0;
		margin-right:-4px; 

		&-int
			// margin:0 0.5em;
			margin-right:1.2em;
		&-logo
			width:100%;
			height: 155px;
			background:#F3F3F3;
			display:inline-block;
			overflow:hidden; 
			-webkit-border-radius: 3px;
			-moz-border-radius: 3px;
			border-radius: 3px;
			a
				width:100%;
				height:100%;
				display:block;
			img
				width:100%;
				
				@media all and (max-width:450px)
					margin-top:-3%;
		&-title
			font-size:1em; 
			margin-top:1em;
			line-height:1em;
			a
				color:#0A435D;
		&-subtitle
			font-size:0.8em;
			margin-top:0.2em; 
		&-date
			font-size:0.6em;
			margin-top:0.2em; 
		&-info
			margin:0;
			font-size:0.8em;
			margin-top:0.2em; 
		&-link 
			margin-top:1em; 
			font-size:0.8em; 
			padding:0.3em 0.5em;
			background:#f4f4f4;
			display:inline-block;
