
#notCoursing {

	width: 100%;
	height: 100%; 
	left: 0;
	top: 0;
	position: absolute;
	display: inline-block;
	background: rgba(255,255,255, 0.80); 

	span {
		position:absolute;
		top:50%;
		left:50%;
		background: rgba(255,255,255, 0.90);
		padding:10px 20px;
		border:1px solid #cecece;

		-webkit-transform: translate(-50%,-50%);
		-ms-transform: translate(-50%,-50%);
		transform: translate(-50%,-50%);
	}

	&:before {
		
		content: '';
		text-align: center;
		z-index: 100;
		z-index: 1000;
		padding-top: 0;
	}
}

.course {

	position: relative;

	&-advise {

		background:rgba(255, 255, 0, 0.1);
		background: rgba(179,53,56,0.05);
		padding:0.5em 1em;
		margin:0 -1em;
		position:relative;

		&-close {
			bottom:1em;
			right:1em;
			content:'ok';
			text-align:center;
			position:absolute;
			padding:0.25em 0.5em;
			color:#fff;
			background: rgba(255,255,0,0.4);
			background: rgba(179,53,56,0.3);
			-webkit-border-radius: 10px;
			-moz-border-radius: 10px;
			border-radius: 10px;
			cursor:pointer;
			z-index:10;
		}
	}

	&-subjects {

		widows: 100%;
		display: inline-block;
		margin-bottom: 15px;
		position:relative;
		
		&-entry {

			/* <li> */
			widows: 100%;
			display: inline-block;
			list-style-type: circle !important;
			padding: 0;
			margin: 0;
			clear: both;
			margin-bottom:10px;

			&-title { 
				font-size:16px;
				display: inline-block;
				margin: 0;
				padding: 0;
				vertical-align: middle;
				line-height: 0;
				left: 0;
			}

			&-tags {
				width:120px;
				font-size:12px;
				text-align: center;
				padding:2px 0; 
				display: inline-block;
				margin-right: 15px;
				vertical-align: middle;
				-webkit-border-radius: 3px;
				-moz-border-radius: 3px;
				border-radius: 3px;
				/* border:2px solid #f4f4f4; */
			}

			&-link {
				color: rgba(0,0,0,.4);
				&:hover {
					background:transparent;
				}
				&:hover:before {
					background:transparent !important;
				}
				&:before {
					content: '-';
					padding-left: 10px;
				}
				&:hover:after {
					border-bottom: 2px solid rgba(0,0,0,0.2);
				}
				&:after {
					content: 'Course sillabous';
					padding-left: 10px; 
					padding-right: 10px; 
				}
			}
		}
	}
}

